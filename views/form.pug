extends layout

block content
  h1 #{title}

  form(method='POST' action='/new')
    div.form-group

      label(for='text') Message:
      input#name.form-control(type='text', placeholder='message' name='text' value=(undefined===text ? '' : text))
      
      label(for='user') Username:
      input#name.form-control(type='text', placeholder='user' name='user' value=(undefined===user ? '' : user))
    button.btn.btn-primary(type='submit') Submit

  if errors
   ul
    for error in errors
     li!= error.msg
